@model IEnumerable<interview.web.Models.AreaConhecimentoViewModel>

@{
    string styles = " .btn-grid { margin: 0 10px;}";
}

<style>
    @Html.Raw(styles)
</style>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Areas de conhecimento cadastradas
            </h2>
        </div>
        <div class="body table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="text-align:center">Descrição</th>
                        <th style="text-align:center">Perguntas Cadastradas</th>
                        <th style="text-align:center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">
                                @Html.HiddenFor(modelItem => item.id)
                                @Html.DisplayFor(modelItem => item.descricao)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.perguntasCadastradas)
                            </td>
                            <td style="text-align: end;">

                                @Html.ActionLink("Alterar", "ExibirTelaCriarAlterar", new { id = item.id }, new { @class = "btn btn-grid bg-warning waves-effect" })

                                @Html.ActionLink("Excluir", "Delete", new { id = item.id.ToString() }, new { @class = "btn btn-grid bg-danger text-white waves-effect" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>