@model AreaConhecimentoViewModel

@{
    ViewData["Title"] = "Áreas de conhecimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card" style="margin-top: 100px;">
        <div class="header">
            <h2>
                Alterar Area de Conhecimento
            </h2>
        </div>
        <div class="body">
            <form asp-action="Save">
                <div class="row clearfix">
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="descricao" class="control-label">Descrição</label>
                                <input asp-for="@Model.descricao" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3" style="padding-top: 17px">
                        <div class="form-group">

                            @Html.ActionLink("Voltar", "Index")

                            <input type="submit" value="Salvar" class="btn btn-primary" />

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>