@model IEnumerable<interview.web.Models.PerguntaViewResponseModel>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Perguntas cadastradas
            </h2>
        </div>
        <div class="body table-responsive">
            <table class="table table-striped">
                <thead>
                <th style="text-align:center">Pergunta</th>
                <th style="text-align:center">Area de Conhecimento</th>
                <th style="text-align:center">Respostas</th>
                <th style="text-align:center">Ações</th>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.descricao)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.areaConhecimento)
                            </td>
                            <td style="text-align:center">
                                @foreach (var a in item.alternativas)
                                {
                                    @Html.DisplayFor(modelItem => a.descricao)

                                    <br />
                                    @Html.DisplayFor(modelItem => a.correta)
                                }
                            </td>
                            <td style="text-align:center">
                                @Html.ActionLink("Alterar", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn bg-teal waves-effect col-sm-2" })
                                <text> | </text>
                                @Html.ActionLink("Excluir", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn bg-warning waves-effect col-sm-2" })
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
