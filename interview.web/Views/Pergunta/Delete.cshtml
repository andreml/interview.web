@model interview.web.Models.PerguntaViewResponseModel

@{
    ViewData["Title"] = "Excluir Pergunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<br />
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h3>Tem certeza que deseja excluir essa pergunta?</h3>
        </div>
        <div class="body">
            <form asp-action="Delete">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="Descricao" class="control-label">Pergunta</label>
                                <input asp-for="Descricao" type="text" class="form-control">
                                <input asp-for="Id" type="text" class="form-control" hidden></input>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="AreaConhecimento" class="control-label">Area de Conhecimento</label>
                                <input asp-for="AreaConhecimento" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div style="display:flex;justify-content:center">
                        <input type="submit" value="Excluir" class="btn bg-danger waves-effect col-sm-2 text-white" />
                        @Html.ActionLink("Voltar", "Index", "Pergunta", null, new { @class = "btn bg-warning waves-effect col-sm-2 text-white" })
                    </div>
                </div>
            </form>
        </div>
        <div class="alert">
            @Html.Raw(ViewBag.Alert);
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".alert").fadeTo(4000, 300).slideDown(300, function () {
            $(".alert").slideDown(300);;
        })
    });
</script>