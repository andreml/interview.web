@model UsuarioViewModel

@{
    ViewData["Title"] = "Candidatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card" style="margin-top: 100px;">
        <div class="header">
            <h2>
                Alterar usuário
            </h2>
        </div>
        <div class="body">
            <form asp-action="Edit">
                <div class="row clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="nome" class="control-label">Nome completo</label>
                                <input asp-for="nome" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="nome" class="control-label">Login</label>
                                <input asp-for="login" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="nome" class="control-label">Senha</label>
                                <input asp-for="senha" type="password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <input type="submit" value="Salvar" class="btn btn-primary" /> | 
                        @Html.ActionLink("Voltar", "Index")
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>