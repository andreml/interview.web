@model interview.web.Models.UsuarioViewResponseModel


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card" style="margin-top: 100px;">
        <div class="header">
            <h2>Meu usuário</h2>
        </div>
        <div class="body">
            <div class="table-responsive">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr>
                                        <th>
                                            CPF
                                        </th>
                                        <th>
                                            Nome
                                        </th>
                                        <th>
                                            Perfil
                                        </th>
                                        <th>
                                            Login
                                        </th>
                                        <th>
                                            Ações
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.cpf)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.perfil)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => Model.login)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Alterar", "Details", new { /* id=item.PrimaryKey */ })
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

