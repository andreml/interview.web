@using interview.web.Models.Enums;
@model UsuarioViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Skill Check - Cadastro de usuário</title>

    <link rel="icon" href="~/material-design/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href="~/material-design/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="~/material-design/plugins/node-waves/waves.css" rel="stylesheet" />
    <link href="~/material-design/plugins/animate-css/animate.css" rel="stylesheet" />
    <link href="~/material-design/css/style.css" rel="stylesheet">

    <link href="~/material-design/plugins/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/material-design/plugins/node-waves/waves.css" rel="stylesheet" />
    <link href="~/material-design/plugins/animate-css/animate.css" rel="stylesheet" />
    <link href="~/material-design/css/style.css" rel="stylesheet" />
</head>
<body class="login-page bg-white">
    <div class="login-box bg-white">
        <div class="card">
            <div class="header">
                <h2>
                    Cadastrar usuário
                </h2>
            </div>
            <div class="body">
                <form asp-action="Create">
                    <div class="row clearfix">

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="cpf" type="text" class="form-control" placeholder="CPF">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="nome" type="text" class="form-control" placeholder="Nome completo">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="login" type="text" class="form-control" placeholder="Login">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    <input asp-for="senha" type="password" class="form-control" placeholder="Senha">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-check">
                                <input asp-for="perfil" class="form-check-input" type="radio" value="@Perfil.Candidato" id="perfilCandidato" />
                                <label class="form-check-label" for="perfilCandidato">@Perfil.Candidato</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="perfil" class="form-check-input" type="radio" value="@Perfil.Avaliador" id="perfilAvaliador" />
                                <label class="form-check-label" for="perfilAvaliador">@Perfil.Avaliador</label>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="col-xs-8">
                                <a href="/">Voltar</a>
                            </div>
                            <div class="col-xs-4">
                                <button class="btn btn-outline-light" type="submit">Criar</button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="alert">
            @Html.Raw(ViewBag.Alert);
        </div>
    </div>
</body>
</html>
<script src="~/material-design/plugins/jquery/jquery.min.js"></script>
<script src="~/material-design/plugins/bootstrap/js/bootstrap.js"></script>
<script src="~/material-design/plugins/node-waves/waves.js"></script>
<script src="~/material-design/plugins/jquery-validation/jquery.validate.js"></script>
<script src="~/material-design/js/admin.js"></script>
<script src="~/material-design/js/pages/examples/sign-in.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".alert").fadeTo(4000, 300).slideDown(300, function () {
            $(".alert").slideDown(300);;
        })
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}