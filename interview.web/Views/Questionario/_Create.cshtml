@model QuestionarioViewModel

@{
    ViewData["Title"] = "Áreas de conhecimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Alterar Area de Conhecimento
            </h2>
        </div>
        <div class="body">
            <form asp-action="Save">
                <div class="row clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="Nome" class="control-label">Nome</label>
                                <input asp-for="@Model.Nome" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-line">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                    @foreach (var item in Model.Perguntas)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
                            <div class="form-group">
                                <div class="form-line">
                                    <label asp-for="@item" class="control-label">Descrição</label>
                                    <input asp-for="@item.Descricao" type="text" class="form-control">
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">

                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <div class="form-line">
                                <input type="submit" value="Salvar" class="btn btn-primary"/>
                                @Html.ActionLink("Voltar", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>