@model IEnumerable<interview.web.Models.QuestionarioViewModel>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Questionarios Cadastrados
            </h2>
        </div>
        <div class="body table-responsive">
            <table class="table table-striped">
                <thead>
                    <th style="text-align:center">Nome</th>
                    <th style="text-align:center">Data de Criação</th>
                    <th style="text-align:center">Avaliações Respondidas</th>
                    <th style="text-align:center">Alterar</th>
                    <th style="text-align:center">Excluir</th>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model)
                        {
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.DataCriacao)
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.AvaliacoesRespondidas)
                            </td>
                            <td style="text-align:center">
                                @Html.ActionLink("Alterar", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn bg-teal waves-effect col-sm-2" })
                            </td>
                            <td style="text-align:center">
                                @Html.ActionLink("Excluir", "Delete", new { /* id=item.PrimaryKey */ }, new { @class = "btn bg-warning waves-effect col-sm-2" })
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
