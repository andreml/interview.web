@using interview.web.Models.View;
@model EnviarQuestionarioCandidatoViewModel

@{
    ViewData["Title"] = "Enviar Questionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card" style="margin-top: 100px;">
        <div class="header">
            <h2>
                Enviar Questionário para Candidato
            </h2>
        </div>
        <div class="body">
            <form asp-action="EnviarQuestionarioCandidato">
                @Html.HiddenFor(modelItem => Model.QuestionarioId)
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <div class="form-line">
                                <label asp-for="LoginCandidato" class="control-label">Login do Candidato</label>
                                <input asp-for="@Model.LoginCandidato" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-2" style='text-align: right;'>
                        @Html.ActionLink("Voltar", "Index", null, null, new { @class = "btn btn-success text-white" })

                        <input type="submit" value="Enviar" class="btn bg-teal" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>